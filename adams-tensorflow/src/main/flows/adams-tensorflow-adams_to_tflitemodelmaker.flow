adams.flow.control.Flow -annotation "Converts ADAMS annotations into Tflite Model Maker ones." -flow-execution-listener adams.flow.execution.NullListener -flow-restart-manager adams.flow.control.flowrestart.NullManager
 adams.flow.source.Start
 adams.flow.control.Trigger -name "prompt user"
  adams.flow.standalone.SetVariable -name "restore file" -var-name restore -var-value @{flow_filename_long}.props -value-type FILE_FORWARD_SLASHES -expand-value true
  adams.flow.source.EnterManyValues -name Parameters -stop-if-canceled true -value "adams.flow.source.valuedefinition.DirectoryValueDefinition -name input_dir -display \"Input directory\" -help \"The ADAMS annotations\" -file-chooser-title \"Input dir\" -use-forward-slashes true" -value "adams.flow.source.valuedefinition.DefaultValueDefinition -name train_perc -display \"Training percentage (0-1)\" -type DOUBLE -default-value 0.7" -value "adams.flow.source.valuedefinition.DefaultValueDefinition -name val_perc -display \"Validation percentage (0-1)\" -type DOUBLE -default-value 0.15" -value "adams.flow.source.valuedefinition.DirectoryValueDefinition -name output_dir -display \"Output directory\" -help \"The directory for the images and the annotations in CSV format\" -file-chooser-title \"Output dir\" -use-forward-slashes true" -output-type MAP -restoration-enabled true -restoration-file @{restore}
  adams.flow.transformer.MapToVariables
  adams.flow.transformer.SetVariable -name "annotations csv" -var-name annotations_csv -var-value @{output_dir}/annotations.csv -value-type FILE_FORWARD_SLASHES -expand-value true
 adams.flow.control.Trigger -name process
  adams.flow.source.FileSystemSearch -output-array true -search "adams.flow.source.filesystemsearch.LocalFileSearch -directory @{input_dir} -regexp .*\\\\.(jpg|png) -sorting SORT_BY_NAME" -use-forward-slashes true
  adams.flow.control.Tee -name "copy files"
   adams.flow.transformer.ArrayToSequence
   adams.flow.transformer.CopyFile -target-dir @{output_dir}
  adams.flow.transformer.PrepareFileBasedDataset -preparation "adams.flow.transformer.preparefilebaseddataset.TrainValidateTestSplit -train-percentage @{train_perc} -validate-percentage @{val_perc}"
  adams.flow.transformer.GenerateFileBasedDataset -generation "adams.flow.transformer.generatefilebaseddataset.TfliteModelMakerCSV -value Train -value Test -value Validation -finder adams.data.objectfinder.AllFinder"
  adams.flow.sink.SpreadSheetFileWriter -output @{annotations_csv} -writer "adams.data.io.output.CsvSpreadSheetWriter -no-header true"